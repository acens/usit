<div class="row">
  <%= form_for @contact do |f| %>
    <div class="contact_detail">
      <div class="section-title">
        <h2 class="text-center">Keep in touch</h2>
      </div>
      <div class="form-group col-md-offset-3 col-md-6">
        <%= f.text_field :name, class: "form-control", placeholder: "Your name" %>
      </div>
      <div class="form-group col-md-offset-3 col-md-6">
        <%= f.email_field :email, class: "form-control", placeholder: "Your e-mail" %>
      </div>
      <div class="form-group col-md-offset-3 col-md-3">
        <%= f.telephone_field :phone, class: "form-control", placeholder: "Your number" %>
      </div>
      <div class="form-group col-md-3">
        <%= f.collection_select :knowledge_id, Knowledge.all, :id, :level,
            {prompt: true}, {class: "form-control"}  %>
      </div>
      <div class="form-group col-md-offset-3 col-md-6">
        <%= f.text_field :language, class: "form-control", placeholder: "Language of conversation" %>
      </div>

      <div class="form-group col-md-offset-3 col-md-6">
        <%= f.text_area :history, row: 10, class: "form-control",
            placeholder: "Your experiences with the language" %>
      </div>
      <div class="form-group col-md-offset-3 col-md-6">
        <%= f.submit "Send", class: "btn btn-primary col-xs-12 col-md-offset-6 col-md-6" %>
      </div>
